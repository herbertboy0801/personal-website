{
  "framework": null,
  "buildCommand": "npm install",
  "outputDirectory": ".",
  "functions": {
    "api/*.js": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    { "source": "/api/login", "destination": "/api/auth?action=login" },
    { "source": "/api/logout", "destination": "/api/auth?action=logout" },
    { "source": "/api/auth-status", "destination": "/api/auth?action=status" },
    { "source": "/api/change-password", "destination": "/api/auth?action=change-password" },
    { "source": "/api/blog/featured", "destination": "/api/blog?action=featured" },
    { "source": "/api/blog/:id", "destination": "/api/blog?id=:id" },
    { "source": "/api/tools/:id", "destination": "/api/tools?id=:id" },
    { "source": "/api/gallery/:id", "destination": "/api/gallery?id=:id" },
    { "source": "/api/works/:id", "destination": "/api/works?id=:id" },
    { "source": "/api/journal/import", "destination": "/api/journal?action=import" },
    { "source": "/api/journal/:id", "destination": "/api/journal?id=:id" },
    { "source": "/admin", "destination": "/admin/public/index.html" },
    { "source": "/admin/", "destination": "/admin/public/index.html" },
    { "source": "/admin/login", "destination": "/admin/public/login.html" },
    { "source": "/admin/login.html", "destination": "/admin/public/login.html" },
    { "source": "/admin/index.html", "destination": "/admin/public/index.html" },
    { "source": "/admin/style.css", "destination": "/admin/public/style.css" },
    { "source": "/admin/script.js", "destination": "/admin/public/script.js" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    },
    {
      "source": "/tools/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=86400" }
      ]
    }
  ]
}
